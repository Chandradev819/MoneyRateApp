@page "/"
@layout PublicLayout

<div class="landing-page">
    <!-- Hero Section -->
    <section class="hero bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">Track Currency Rates Instantly</h1>
            <p class="lead">MoneyRate helps you monitor, analyze, and get alerts for currency fluctuations in real-time.</p>
            <a href="/signup" class="btn btn-light btn-lg mt-3">Get Started Free</a>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Powerful Features</h2>
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    <i class="bi bi-bar-chart-line display-4 text-primary"></i>
                    <h5 class="mt-3">Real-Time Updates</h5>
                    <p>Receive live currency rate updates and alerts on your devices.</p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="bi bi-bell display-4 text-primary"></i>
                    <h5 class="mt-3">Custom Alerts</h5>
                    <p>Set thresholds and get notified instantly when your currency crosses them.</p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="bi bi-graph-up display-4 text-primary"></i>
                    <h5 class="mt-3">Analytics & Trends</h5>
                    <p>Analyze historical trends and make smarter currency decisions.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Pricing Section -->
    <section id="pricing" class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4">Pricing Plans</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-md-3">
                    <div class="card shadow-sm text-center p-3">
                        <h5 class="card-title">Free</h5>
                        <p class="card-price">$0 / month</p>
                        <ul class="list-unstyled">
                            <li>Basic Alerts</li>
                            <li>Limited Currency Pairs</li>
                        </ul>
                        <a href="/signup" class="btn btn-primary mt-3">Start Free</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm text-center p-3 border-primary">
                        <h5 class="card-title">Pro</h5>
                        <p class="card-price">$9.99 / month</p>
                        <ul class="list-unstyled">
                            <li>Unlimited Alerts</li>
                            <li>All Currency Pairs</li>
                            <li>Advanced Analytics</li>
                        </ul>
                        <a href="/signup" class="btn btn-primary mt-3">Start Pro</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta bg-primary text-white text-center py-5">
        <div class="container">
            <h3>Ready to track your currencies smarter?</h3>
            <a href="/signup" class="btn btn-light btn-lg mt-3">Start Now</a>
        </div>
    </section>
</div>
