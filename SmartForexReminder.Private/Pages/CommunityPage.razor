@page "/community"
@layout PrivateLayout

<PageTitle>Community - SmartForexReminder</PageTitle>

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-0">Community</h1>
        <a href="/community/new-post" class="btn btn-primary">
            ➕ New Post
        </a>
    </div>

    <!-- Intro Text -->
    <p class="text-muted mb-4">
        Connect with fellow traders, share strategies, and discuss market trends.
    </p>

    <!-- Posts List -->
    <div class="row g-4">
        @foreach (var post in Posts)
        {
            <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="fw-semibold">@post.Title</h5>
                        <p class="text-muted flex-grow-1">@post.Excerpt</p>
                        <div class="small text-muted mb-2">
                            👤 @post.Author • 📅 @post.CreatedAt.ToString("MMM dd, yyyy")
                        </div>
                        <a href="@($"/community/{post.Id}")" class="btn btn-outline-primary btn-sm mt-auto">
                            Read More
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if (!Posts.Any())
    {
        <div class="text-center py-5">
            <p class="text-muted fs-5">No community posts yet — be the first to start the conversation!</p>
            <a href="/community/new-post" class="btn btn-primary">Create Your First Post</a>
        </div>
    }
</div>

@code {
    private List<CommunityPost> Posts = new()
    {
        new CommunityPost
        {
            Id = 1,
            Title = "My Favorite Trading Pair Strategies",
            Excerpt = "Sharing the setups and signals that work best for me in volatile markets...",
            Author = "ForexPro123",
            CreatedAt = DateTime.UtcNow.AddDays(-2)
        },
        new CommunityPost
        {
            Id = 2,
            Title = "How I Use SmartForexReminder’s Optimizer",
            Excerpt = "A quick guide on combining the Optimizer with custom alerts for better decisions.",
            Author = "TraderJane",
            CreatedAt = DateTime.UtcNow.AddDays(-5)
        }
    };

    public class CommunityPost
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Excerpt { get; set; } = string.Empty;
        public string Author { get; set; } = string.Empty;
        public DateTime CreatedAt { get; set; }
    }
}
