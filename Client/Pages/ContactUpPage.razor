@page "/contact"
@layout PublicLayout

<PageTitle>Contact Us - SmartForexReminder</PageTitle>

<div class="container py-5">
    <h1 class="text-center fw-bold display-5 mb-3">Contact Us</h1>
    <p class="text-center text-muted fs-5 mb-5">
        Questions, feedback, or partnership ideas — we’re here to help.
    </p>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="fw-semibold mb-4 text-center">Send Us a Message</h2>

                    <EditForm Model="@contactModel" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Name</label>
                            <InputText class="form-control form-control-lg" @bind-Value="contactModel.Name" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email</label>
                            <InputText type="email" class="form-control form-control-lg" @bind-Value="contactModel.Email" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Subject</label>
                            <InputText class="form-control form-control-lg" @bind-Value="contactModel.Subject" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Message</label>
                            <InputTextArea class="form-control form-control-lg" rows="5" @bind-Value="contactModel.Message" required />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5 fw-semibold">Send Message</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ContactFormModel contactModel = new();

    private void HandleValidSubmit()
    {
        // TODO: Connect to backend/email service
        Console.WriteLine($"New message from {contactModel.Name} ({contactModel.Email}): {contactModel.Message}");
    }

    public class ContactFormModel
    {
        public string Name { get; set; }
        public string Email { get; set; }
        public string Subject { get; set; }
        public string Message { get; set; }
    }
}
