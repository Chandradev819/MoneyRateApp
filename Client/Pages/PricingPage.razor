@page "/pricing"
@layout PublicLayout

<PageTitle>Pricing - SmartForexReminder</PageTitle>

<div class="container py-5">
    <h1 class="text-center fw-bold display-5 mb-2">Choose Your Plan</h1>
    <p class="text-center text-muted fs-5 mb-5">Start free, upgrade when you're ready. No hidden fees.</p>

    <div class="row g-4">
        @foreach (var plan in PricingPlans)
        {
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-lg rounded-4 overflow-hidden">
                    
                    <!-- Highlight ribbon -->
                    @if (plan.HighlightClass == "primary")
                    {
                        <div class="bg-@plan.HighlightClass text-white text-center py-1 fw-semibold">Most Popular</div>
                    }

                    <div class="card-body d-flex flex-column p-4">
                        <h3 class="card-title fw-bold text-center mb-3">@plan.Name</h3>
                        <h4 class="text-center text-success fw-bold fs-3 mb-2">@plan.Price</h4>
                        <p class="text-muted text-center mb-4">@plan.Description</p>
                        <ul class="list-unstyled flex-grow-1 mb-4">
                            @foreach (var feature in plan.Features)
                            {
                                <li class="mb-2">✅ @feature</li>
                            }
                        </ul>
                        <a href="/signup" class="btn btn-outline-@plan.HighlightClass w-100 fw-semibold">Get Started</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <p class="text-muted fs-6">Need a custom plan for your team or enterprise?</p>
        <a href="/contact" class="btn btn-secondary btn-lg px-4">Contact Us</a>
    </div>
</div>

@code {
    private List<PricingPlan> PricingPlans = new()
    {
        new PricingPlan
        {
            Name = "Starter",
            Price = "Free",
            Description = "Perfect for beginners and casual traders.",
            Features = new() { "Up to 3 reminders", "Basic rule triggers", "Email alerts" },
            HighlightClass = "secondary"
        },
        new PricingPlan
        {
            Name = "Pro",
            Price = "$9.99/month",
            Description = "Advanced features for active traders.",
            Features = new() { "Unlimited reminders", "Advanced rule logic", "SMS + Email alerts", "Priority support" },
            HighlightClass = "primary"
        },
        new PricingPlan
        {
            Name = "Enterprise",
            Price = "Custom",
            Description = "Tailored solutions for teams and businesses.",
            Features = new() { "Team access", "Custom integrations", "Dedicated account manager" },
            HighlightClass = "dark"
        }
    };

    public class PricingPlan
    {
        public string Name { get; set; }
        public string Price { get; set; }
        public string Description { get; set; }
        public List<string> Features { get; set; }
        public string HighlightClass { get; set; }
    }
}
